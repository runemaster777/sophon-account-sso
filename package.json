{
  "name": "@sophon-labs/account-root",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "------------------------- BUILDING ------------------------": "",
    "build:all": "yarn workspaces run build",
    "build:packages": "yarn workspace @sophon-labs/account-message-bridge run build && yarn workspace @sophon-labs/account-connector run build && yarn workspace @sophon-labs/account-eip6963 run build && yarn workspace @sophon-labs/account-react-native run build",
    "------------------------- LINTING -------------------------": "",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "------------------------- TESTING -------------------------": "",
    "test": "yarn workspaces run test",
    "test:ci": "yarn workspaces run test:ci",
    "------------------------- RELEASE -------------------------": "",
    "release:generate": "changeset",
    "release:version": "changeset version",
    "release:publish": "yarn publish -r --no-git-checks",
    "release:pre:enter": "changeset pre enter next",
    "release:pre:exit": "changeset pre exit"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "^2.29.5"
  },
  "dependencies": {},
  "resolutions": {
    "react-native-webview": "13.15.0"
  }
}

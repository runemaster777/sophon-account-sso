{
  "name": "@sophon-labs/account-root",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "build:connector": "npm run build --workspace=packages/connector",
    "dev:auth": "npm run dev --workspace=apps/auth-server",
    "dev:demo": "npm run dev --workspace=examples/sandbox-app",
    "build:auth": "npm run build --workspace=apps/auth-server",
    "dev:connector": "npm run dev --workspace=packages/connector",
    "build:all": "npm run build --workspaces",
    "install:all": "npm install",
    "------------------------- TESTING -------------------------": "",
    "test": "yarn workspaces run test",
    "test:ci": "yarn workspaces run test:ci",
    "------------------------- RELEASE -------------------------": "",
    "release:generate": "changeset",
    "release:version": "changeset version",
    "release:publish": "yarn publish -r --no-git-checks"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "^2.29.5"
  },
  "dependencies": {},
  "resolutions": {
    "react-native-webview": "13.15.0"
  }
}

{
  "name": "@sophon-labs/account-react-native",
  "version": "0.0.1",
  "private": true,
  "description": "Library to handle sophon account on react native environments",
  "main": "./dist/module/index.js",
  "types": "./dist/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./dist/typescript/src/index.d.ts",
      "default": "./dist/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "clean": "del-cli lib",
    "build": "bob build",
    "dev": "nodemon -e ts,tsx -w ./src -x 'yarn build'"
  },
  "dependencies": {
    "@sophon-labs/account-message-bridge": "0.0.1",
    "eventemitter3": "5.0.1",
    "viem": "^2.31.3",
    "react-native-mmkv": "^3.3.0",
    "react-native-webview": "13.15.0",
    "react-native-safe-area-context": "^5.5.2",
    "zksync-sso": "file:../../../zksync-sso/packages/sdk"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.78.2",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react-native-builder-bob": "^0.40.12",
    "release-it": "^17.10.0",
    "typescript": "^5.8.3",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-dom": "*",
    "react-modal": "*",
    "@types/react": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/dist/"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.51.1"
  }
}
